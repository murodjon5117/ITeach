<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#4DFFFFFF"
    tools:context=".login.SuccessFragment">

    <ImageView
        android:id="@+id/image_success"
        android:layout_width="249.95dp"
        android:layout_height="446.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_successfully"
        android:layout_marginStart="64.03dp"
        android:layout_marginEnd="61.03dp"
        android:layout_marginTop="44dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_successful"
        android:text="@string/successful"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#333E63"
        android:layout_width="231dp"
        android:layout_height="37dp"

        app:layout_constraintTop_toBottomOf="@id/image_success"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44.5dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_under_successful"
        android:layout_width="196dp"
        android:layout_height="36dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="582dp"
        android:layout_marginBottom="194dp"
        android:text="@string/lorem_ipsun"
        />

</androidx.constraintlayout.widget.ConstraintLayout>